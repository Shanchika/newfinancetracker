<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Heading -->
    <TextView
        android:id="@+id/tv_budget_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="13dp"
        android:text="@string/set_your_monthly_budget_here"
        android:textColor="@color/primary"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tv_budget_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/track_your_expenses_and_stay_on_budget"
        android:textSize="14sp"
        android:textColor="@color/secondary"
        android:layout_marginBottom="16dp" />

    <!-- Current Month -->
    <TextView
        android:id="@+id/tv_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- Budget Input Field -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_budget_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/budget_amount"
            android:inputType="numberDecimal" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/secondary"
            android:text="@string/cancel"
            android:textColor="@color/accent" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:layout_marginStart="8dp"
            android:text="@string/save" />
    </LinearLayout>

    <!-- ImageView Below Buttons -->
    <ImageView
        android:id="@+id/img_budget_illustration"
        android:layout_width="398dp"
        android:layout_height="312dp"
        android:layout_marginTop="24dp"
        android:scaleType="fitCenter"
        android:src="@drawable/pic6" />

    <TextView
        android:id="@+id/app_advertistTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1sp"
        android:text="@string/cashleaf"
        android:textAlignment="center"
        android:textColor="@color/secondary"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/app_advertist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/spend_smart_save_smarter"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp" />

</LinearLayout>
